@using Readify.UI_MVC.Database
@model Readify.Domain.CategoryAgg.DTOs.CreateCategoryDto
@{
    Layout = "_ManagerLayout";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">

            <div class="card-body">
                <div class="px-3 py-5">
                    <form method="post" enctype="multipart/form-data" class="form form-horizontal">
                        <div class="form-body">
                            <div class="form-group row">
                                <label class="col-md-3 label-control" asp-for="Name">نام دسته بندی : </label>
                                <div class="col-md-9">
                                    <div class="position-relative has-icon-left">
                                        <input type="text" asp-for="Name" class="form-control" name="Name">
                                        <div class="form-control-position">
                                            <i class="ft-user"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control" asp-for="Descerption" >توضیحات : </label>
                                <div class="col-md-9">
                                    <div class="position-relative has-icon-left">
                                        <input type="text" asp-for="Descerption" class="form-control" >
                                        <div class="form-control-position">
                                            <i class="fa fa-briefcase"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            




                            <div class="form-group row">
                                <label class="col-md-3 label-control" asp-for="ImgFile">تصویر :</label>
                                <div class="col-md-9">
                                    <input type="file" class="form-control-file" asp-for="ImgFile" name="ImageFile">
                                </div>
                            </div>

                        </div>
                        
                        <input type="hidden" asp-for="UserId"/>

                        <div class="form-actions left">
                            <button type="submit" asp-controller="CategoryManager" asp-action="Index" class="btn btn-danger mr-1">
                                <i class="icon-trash"></i> لغو
                            </button>
                            <button type="submit" asp-controller="CategoryManager" asp-action="Create" class="btn btn-success">
                                <i class="icon-note"></i> ذخیره
                            </button>
                            
                            <div class="d-grid mb-2">
                       
                        
                                <div style="color:red">@ViewBag.Error</div>

                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
