@{
    @model CategoryBookViewModel
}

@{
    ViewData["Title"] = "صفحه اصلی";
}



<section class="hero">
    <h1>هر کتابی که می‌خواهی، اینجا هست</h1>
    <p>با پیش از صدها عنوان کتاب در دسته‌بندی‌های متفاوت، سفر شگفت‌انگیز خود را آغاز کنید</p>
    <button>مشاهده پرفروش‌ترین ها</button>
</section>

<div class="container">

    <h2 class="section-title">دسته‌بندی‌ها</h2>
    
    <div class="categories">

        @{
            foreach (var category in @Model.Categories)
            {
                <div class="category-card">
                    <div class="category-icon">
                        <img src="@category.ImgUrl" width="50px"/>
                    </div>
                    <div class="category-title">@category.Name </div>
                    <div class="category-subtitle"> @category.Description </div>
                </div>
            }
        }

    </div>


    <h2 class="section-title">جدیدترین کتاب‌ها</h2>

    <div class="books">

        @{
            foreach (var book in @Model.Books)
            {
                
                <div class="book-card">
                    <div class="book-image">
                        <img src=@book.ImgUrl alt="Girl in a jacket" width="260" height="280">
                    </div>
                    <div class="book-info">
                        <div class="book-title">@book.BookName </div>
                        <div class="book-author"> @book.AuthorName</div>
                        <div class="book-author">@book.PageCount صفحه </div>
                        <div class="book-price">@book.Price ت</div>
                    </div>
                </div>
            }
        }

    </div>
</div>
