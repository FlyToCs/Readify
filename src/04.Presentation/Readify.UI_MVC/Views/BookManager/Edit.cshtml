@model BookEditViewModel
@{
    Layout = "_ManagerLayout";
}



<div class="row">
    <div class="col-md-12">
        <div class="card">

            <div class="card-body">
                <div class="px-3 py-5">


                    <form method="post" enctype="multipart/form-data">

                        <input type="hidden" name="Book.Id" value="@Model.Book.Id" />

                        <div class="form-group">
                            <label>نام کتاب:</label>
                            <input type="text" name="Book.BookName" class="form-control" value="@Model.Book.BookName" />
                        </div>

                        <div class="form-group">
                            <label>نویسنده:</label>
                            <input type="text" name="Book.AuthorName" class="form-control" value="@Model.Book.AuthorName" />
                        </div>

                        <div class="form-group">
                            <label>تعداد صفحات:</label>
                            <input type="number" name="Book.PageCount" class="form-control" value="@Model.Book.PageCount" />
                        </div>

                        <div class="form-group">
                            <label>قیمت:</label>
                            <input type="number" name="Book.Price" class="form-control" value="@Model.Book.Price" />
                        </div>

                        <div class="form-group">
                            <label>دسته‌بندی:</label>
                            <select name="Book.CategoryId" class="form-control">
                                <option value="">انتخاب گزینه</option>
                                @foreach (var category in Model.Categories)
                                {
                                    if (category.Id == Model.Book.CategoryId)
                                    {
                                        <option value="@category.Name" selected>@category.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@category.Name">@category.Name</option>
                                    }
                                }
                            </select>


                        </div>

                        <div class="form-group">
                            <label>تصویر اصلی:</label>
                            @if (Model.Book.img != null && !string.IsNullOrEmpty(Model.Book.img.ImageUrl))
                            {
                                <div>
                                    <img src="/@Model.Book.img.ImageUrl" width="150" />
                                </div>
                            }

                            <input type="file" name="Book.ImageFile" class="form-control-file" />
                        </div>

                        <button type="submit" class="btn btn-success">ذخیره تغییرات</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
