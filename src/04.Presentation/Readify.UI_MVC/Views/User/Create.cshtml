@using Readify.Domain.UserAgg.Enums
@model Readify.Domain.UserAgg.DTOs.CreateUserDto


@{
    Layout = "_ManagerLayout";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">

            <div class="card-body">
                <div class="px-3 py-5">
                    <form method="post" enctype="multipart/form-data" class="form form-horizontal">
                        <div class="form-body">
                            <div class="form-group row">
                                <label class="col-md-3 label-control" asp-for="FirstName">نام: </label>
                                <div class="col-md-9">
                                    <div class="position-relative has-icon-left">
                                        <input type="text"  class="form-control" asp-for="FirstName">
                                        <div class="form-control-position">
                                            <i class="ft-user"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control" asp-for="LastName">نام خانوادگی: </label>
                                <div class="col-md-9">
                                    <div class="position-relative has-icon-left">
                                        <input type="text" asp-for="LastName" class="form-control" >
                                        <div class="form-control-position">
                                            <i class="ft-user"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control" asp-for="UserName">نام کاربری: </label>
                                <div class="col-md-9">
                                    <div class="position-relative has-icon-left">
                                        <input type="text" class="form-control" asp-for="UserName">
                                        <div class="form-control-position">
                                            <i class="fa fa-briefcase"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control" asp-for="Password">رمز عبور: </label>
                                <div class="col-md-9">
                                    <div class="position-relative has-icon-left">
                                        <input type="text"  class="form-control" asp-for="Password">
                                        <div class="form-control-position">
                                            <i class="fa fa-briefcase"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control" asp-for="Role">نقش کاربری : </label>
                                <div class="col-md-9">
                                    <select class="form-control" asp-for="Role">
                                        <option value="">انتخاب گزینه</option>
                                        @foreach (var role in Enum.GetValues(typeof(RoleEnum)))
                                        {
                                            <option value="@((int)role)">
                                                @role
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>





                            <div class="form-group row">
                                <label class="col-md-3 label-control" asp-for="ImgFile">تصویر :</label>
                                <div class="col-md-9">
                                    <input type="file" class="form-control-file" asp-for="ImgFile">
                                </div>
                            </div>



                        </div>

                        <div class="form-actions left">
                            <button type="submit" asp-controller="User" asp-action="Index" class="btn btn-danger mr-1">
                                <i class="icon-trash"></i> لغو
                            </button>
                            <button type="submit" asp-controller="User" asp-action="Create" class="btn btn-success">
                                <i class="icon-note"></i> ذخیره
                            </button>
                        </div>
                        

                        <div class="d-grid mb-2">

                            <div style="color:red">@ViewBag.Error</div>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
